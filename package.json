{
  "name": "cyber-and-dragons",
  "version": "1.0.0",
  "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "cd client && yarn start",
    "client-build": "cd client && yarn build && yarn start -p $PORT",
    "server": "nodemon --ignore 'client/' server",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "concurrently --kill-others-on-fail \"node server/server -p $PORT\" \"yarn client-build -p $PORT\" ",
    "storybook": "cd client && yarn storybook"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
